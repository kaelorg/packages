{
  "name": "kaelbot",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "private": true,
  "scripts": {
    "fix": "yarn lint:fix && yarn prettier:fix",
    "clean": "lerna exec --parallel -- rimraf dist typings node_modules/.cache",
    "pub": "lerna version --conventional-commits && lerna publish from-package --conventional-commits",
    "prebuild": "yarn clean",
    "postbuild": "node fix.js",
    "build": "lerna exec --parallel -- rollup -c ../../rollup.config.js",
    "lint": "eslint ./ --ext js,ts",
    "lint:fix": "eslint ./ --ext js,ts --fix",
    "prettier": "prettier --check ./**/*.{js,ts}",
    "prettier:fix": "prettier --write ./**/*.{js,ts}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaeltec/packages.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@hitechline/eslint-config-node": "1.0.2",
    "@rollup/plugin-commonjs": "15.0.0",
    "@rollup/plugin-node-resolve": "9.0.0",
    "@rollup/plugin-url": "5.0.1",
    "@types/node": "14.11.1",
    "eslint": "7.9.0",
    "lerna": "3.22.1",
    "prettier": "2.1.2",
    "rimraf": "3.0.2",
    "rollup": "2.27.1",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.27.2",
    "typescript": "4.0.3"
  }
}
